gorevler = []

while True:
    print("\n---MENÜ---")
    print("1. Görev ekle")
    print("2. Görevi sil")
    print("3. Görevleri listele")
    print("4. Çıkış")

    secim = input("Lütfen bir seçim yapınız (1-4): ")

    if secim == '1':
        yeni_gorev = input("Eklemek istediğiniz görevi girin: ")
        gorevler.append(yeni_gorev)
        print(f"'{yeni_gorev}' görevi başarıyla eklendi.")


    elif secim == '2':
        if len(gorevler) == 0:
            print("Silinecek görev bulunmuyor.")

        else:
            print("Mevcut görevler: ", gorevler)
            silinecek_gorev = input("Silmek istediğiniz görevi giriniz: ")
            # Hata düzeltildi: 'gorev' yerine 'gorevler' ve '.remote' yerine '.remove' kullanıldı.
            if silinecek_gorev in gorevler:
                gorevler.remove(silinecek_gorev)
                print(f"'{silinecek_gorev}' görevi başarıyla silindi.")
            else:
                print("Hata! Girdiğiniz görev listede bulunamadı.")
                
    elif secim == '3':
        if len(gorevler) == 0:
            print("Yapılacaklar listeniz boş.")
        else:
            print("\n-----YAPILACAKLAR LİSTESİ---")
            # Görevleri daha okunaklı listelemek isterseniz bu kısmı kullanabilirsiniz:
            for i, gorev in enumerate(gorevler, 1):
                print(f"{i}. {gorev}")

    elif secim == '4':
        print("Uygulamadan çıkış yapılıyor, hoşça kalın :)")
        break # Doğru yerde kalması gereken 'break'

    else:
        print("Hata! Lütfen 1 ile 4 aralığında bir sayı giriniz.")
# En sondaki fazladan 'break' silindi.
